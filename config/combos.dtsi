        // RIGHT SYMBOLS (right thumb 42 + right keys)
        // ==========================================
        // Top row: ^   #   *   $   \
        combo_caret {
            timeout-ms = <50>;
            key-positions = <42 7>;
            bindings = <&kp CARET>;
        };
        combo_hash {
            timeout-ms = <50>;
            key-positions = <42 8>;
            bindings = <&kp HASH>;
