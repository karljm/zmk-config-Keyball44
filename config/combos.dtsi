        // Bottom row: '   <   [   ]   >
        combo_sqt {
            timeout-ms = <50>;
            key-positions = <39 25>;
            bindings = <&kp SQT>;
        };
        combo_lt {
            timeout-ms = <50>;
            key-positions = <39 26>;
            bindings = <&kp LT>;
        };
        combo_lbkt {
            timeout-ms = <50>;
