            bindings = <&kp PLUS>;
        };
        combo_minus {
            timeout-ms = <50>;
            key-positions = <42 22>;
            bindings = <&kp MINUS>;
        };
        combo_prcnt {
            timeout-ms = <50>;
            key-positions = <42 23>;
            bindings = <&kp PRCNT>;
        };

        // Bottom row: :   ;   /   ,   .
        combo_colon {
            timeout-ms = <50>;
            key-positions = <42 31>;
            bindings = <&kp COLON>;
        };
        combo_semi_r {
            timeout-ms = <50>;
            key-positions = <42 32>;
            bindings = <&kp SEMI>;
        };
        combo_fslh {
            timeout-ms = <50>;
