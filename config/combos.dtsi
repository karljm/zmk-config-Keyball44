        // Home row: _   =   +   -   %
        combo_under {
            timeout-ms = <50>;
            key-positions = <42 19>;
            bindings = <&kp UNDER>;
        };
        combo_equal {
            timeout-ms = <50>;
            key-positions = <42 20>;
            bindings = <&kp EQUAL>;
        };
        combo_plus {
            timeout-ms = <50>;
